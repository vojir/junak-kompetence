{block title}Vůdcovské kompetence{/block}
{block content}

<main class="container-fluid maxWidth">
  <h1 class="page-header">Vůdcovské kompetence <small>ke zkoušce</small></h1>
  <div class="backLink">
    <a href="{link Vudce:default}" class="btn btn-default visible-xs-inline-block visible-sm-inline-block">Zpět na přehled kompetencí</a>
  </div>
  <div class="row content">
    <div class="col-md-5 col-lg-5 hidden-sm hidden-xs">
      <ul class="nav nav-pills nav-stacked columnNav0 withActive">
        {foreach $vudceItems as $vudceItemsItem}
          <li n:class="$vudceItem->vudceItemId==$vudceItemsItem->vudceItemId?active">
            <a href="{link Vudce:show id=>$vudceItemsItem->vudceItemId}"><span class="number">{$vudceItemsItem->directiveId}.</span> {$vudceItemsItem->name}</a>
          </li>
        {/foreach}
      </ul>
    </div>
    <article class="col-md-7 col-lg-7 col-sm-12 col-xs-12">
      <h2>{$vudceItem->directiveId}. {$vudceItem->name}</h2>
      <p>{$vudceItem->description}</p>

      {if empty($vudceItem->competences)}
        <p class="hint withTopPadding">Není zahrnuto v kompetenčním modelu</p>
      {else}
        {foreach $vudceItem->competences as $competence}
          <h3><a href="{link Competence:show id=>$competence->competenceId}">Kompetence {$competence->name}</a></h3>
          <p>
          {if empty($competence->levelVudce)}
            {$competence->levelCekatel}
          {else}
            {$competence->levelVudce}
          {/if}
          </p>
        {/foreach}
      {/if}

      <nav>
        <a href="{link Vudce:prev id=>$vudceItem->vudceItemId}" class="btn btn-default prev">předchozí kompetence VZ</a>
        <a href="{link Vudce:next id=>$vudceItem->vudceItemId}" class="btn btn-default next">následující kompetence VZ</a>
      </nav>
    </article>
  </div>
</main>
