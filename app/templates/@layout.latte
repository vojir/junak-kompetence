{**
 * @param string   $basePath web base path
 * @param array    $flashes  flash messages
 *}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>{ifset title}{include title|striptags} | {/ifset}Kompetenční model Junáka</title>
	<link rel="stylesheet" href="{$basePath}/css/bootstrap.min.css" type="text/css" />
	<link rel="stylesheet" href="{$basePath}/css/bootstrap-theme.min.css" type="text/css" />
	<link rel="stylesheet" href="{$basePath}/css/main.css" type="text/css" />

	<!--[if lt IE 9]>
	<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
	<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->

	{block head}{/block}
</head>

<body>
	<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>
	<header>
		<nav class="navbar navbar-inverse">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<h1><a class="navbar-brand" href="{$basePath}">Kompetenční model Junáka</a></h1>
				</div>
				<div id="navbar" class="collapse navbar-collapse">
					<ul class="nav navbar-nav">
						<li n:class="$presenter->isLinkCurrent('Competence:*')?'active'">
							<a href="{link Competence:show id=>1}">Prohlížení kompetencí</a>
						</li>
						<li n:class="$presenter->isLinkCurrent('Vudce:*')?'active'">
							<a href="{link Vudce}">Vůdcovky</a>
						</li>
						<li n:class="$presenter->isLinkCurrent('Cekatel:*')?'active'">
							<a href="{link Cekatel}">Čekatelky</a>
						</li>
						<li n:class="$presenter->isLinkCurrent('Article:about')?'active'">
							<a href="{link Article:about}">O kompetenčním modelu</a>
						</li>
					</ul>
				</div><!--/.nav-collapse -->
			</div>
		</nav>
	</header>
	{include content}

	{block scripts}
	<script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
	<script src="https://nette.github.io/resources/js/netteForms.min.js"></script>
	<script src="{$basePath}/js/main.js" type="text/javascript"></script>
	<script src="{$basePath}/js/bootstrap.min.js" type="text/javascript"></script>
	{/block}
</body>
</html>
